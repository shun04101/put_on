
<% if post.bookmarked_by?(current_user) %>
  <%= link_to "", post_bookmark_path(post, post.bookmarks.find_by(user_id: current_user)), method: :delete, remote: true, class: "fas fa-bookmark" %></td>
<% else %>
  <%= link_to "", post_bookmarks_path(post), method: :post, remote: true, class: "far fa-bookmark" %></td>
<% end %>