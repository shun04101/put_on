<div class='container'>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <h3 class="col-12 text-center pb-5">新規会員登録</h3>
      </div>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group row">
          <%= f.label :"名前", class: "col-3" %>
          <%= f.label :"(姓)", class: "col-1" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"令和", class: "col-3 form-control" %>
          <%= f.label :"(名)", class: "col-1" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",  placeholder:"道子",class: "col-3 form-control" %>
        </div>

        <div class="field form-group row">
          <%= f.label :"フリガナ", class: "col-3" %>
          <%= f.label :"(セイ)", class: "col-1" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder:"レイワ", class: "col-3 form-control" %>
          <%= f.label :"(メイ)", class: "col-1" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder:"ミチコ",class: "col-3 form-control" %>
        </div>

        <div class="field form-group row">
          <%= f.label :"メールアドレス", class: "col-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-3 form-control",  placeholder:"sample@example.com" %>
        </div>

        <div class="field form-group row">
          <%= f.label :"ニックネーム(他のユーザーに公開されます)", class: 'col-4' %>
          <%= f.text_field :nickname, autocomplete: "nickname", class: 'col-3 form-control', placeholder:"シャツくん" %>
        </div>
        
        <div class="field form-group row">
          <%= f.label :"パスワード(6文字以上)", class: "col-4" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-3 form-control" %>
        </div>

        <div class="field form-group row">
          <%= f.label :"パスワード(確認用)", class: "col-4" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3 form-control" %>
        </div>

        <div class="row">
          <%= f.submit "新規登録", class: 'btn btn-success offset-4 col-3' %>
        </div>
      <% end %>

      <div class="mt-3">
        <h4>既に登録済みの方</h4>
        <p class="mt-3"><%= link_to "こちら", user_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>