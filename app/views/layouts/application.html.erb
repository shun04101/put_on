<!DOCTYPE html>
<html>
  <head>
    <title>Put On…</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">-->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#8ba39e">
        <div class="container navbar-flex">
          
          <div class="row">
            <div class="col-4">
              <%= render 'searches/form' %>
            </div>
          </div>
          
          <div class="col-4 d-flex d-flex align-items-center justify-content-center pl-5 ml-5">
            <%= link_to root_path, class:"" do %>
              <div class="logo-icon"></div>
            <% end %>
          </div>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="col-4">
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
              <div class="row">
                <ul class="navbar-nav">
                  <% if user_signed_in? %>
                    <li class="col-3"><%= link_to '', user_path(current_user.id), class:"fas fa-address-card nav-link fa-lg"%></li>
                    <li class="col-3"><%= link_to '', timeline_path, class:"fas fa-stream nav-link fa-lg" %></li>
                    <li class="col-3"><%= link_to '', new_post_path, class:"fas fa-plus-circle nav-link fa-lg" %></li>
                    <li class="col-3"><%= link_to "", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link fa-lg" %></li>
                  <% else %>
                    <li class="col-4"><%= link_to '', about_path, class:"fab fa-adn nav-link fa-lg" %></li>
                    <li class="col-4"><%= link_to "", new_user_registration_path, class:"fas fa-user-plus nav-link fa-lg" %></li>
                    <li class="col-4"><%= link_to "", new_user_session_path, class:"fas fa-sign-in-alt nav-link fa-lg" %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>

        </div>
      </nav>
    </header>
    
    <main>
      <%= yield %>
    </main>
    
    <footer class="footer bg-light">
        <div class="container">
            <div class="row">
              <div class="col-6 h-100 text-center text-lg-start my-auto">
                <ul class="list-inline mb-2">
                  <% if user_signed_in? %>
                    <li class="list-inline-item"><%= link_to '', user_path(current_user.id), class:"fas fa-address-card nav-link "%></li>
                    <li class="list-inline-item">⋅</li>
                    <li class="list-inline-item"><%= link_to '', timeline_path, class:"fas fa-stream nav-link" %></li>
                    <li class="list-inline-item">⋅</li>
                    <li class="list-inline-item"><%= link_to '', new_post_path, class:"fas fa-plus-circle nav-link" %></li>
                    <li class="list-inline-item">⋅</li>
                    <li class="list-inline-item"><%= link_to "", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link " %></li>
                  <% else %>
                    <li class="list-inline-item"><%= link_to 'About', about_path, class:"fab fa-adn nav-link font-weight-bold" %></li>
                    <li class="list-inline-item">⋅</li>
                    <li class="list-inline-item"><%= link_to "新規登録", new_user_registration_path, class:"fas fa-user-plus nav-link font-weight-bold" %></li>
                    <li class="list-inline-item">⋅</li>
                    <li class="list-inline-item"><%= link_to "ログイン", new_user_session_path, class:"fas fa-sign-in-alt nav-link font-weight-bold" %></li>
                  <% end %>
                </ul>
                  <p class="text-muted small mb-4 mb-lg-0">&copy; DMM WEBCAMP COMMIT</p>
              </div>
              <div class="col-6 h-100 text-center text-lg-end my-auto">
                <ul class="list-inline mb-0">
                  <li class="list-inline-item me-4">
                    <a href="#"><i class="bi-facebook fs-3"></i></a>
                  </li>
                  <li class="list-inline-item me-4">
                    <a href="#"><i class="bi-twitter fs-3"></i></a>
                  </li>
                  <li class="list-inline-item">
                    <a href="#"><i class="bi-instagram fs-3"></i></a>
                  </li>
                </ul>
              </div>
            </div>
        </div>
    </footer>
  </body>
</html>
