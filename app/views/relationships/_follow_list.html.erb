<% if users.exists? %>
  <% users.each do |user| %>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>ニックネーム</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= user.nickname %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td><%= link_to 'マイページへ', user_path(user), class: "user_#{user.id}" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>