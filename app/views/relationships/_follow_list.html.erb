<% if users.exists? %>
  <% users.each do |user| %>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>ニックネーム</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= user.nickname %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td>
            <% if user_signed_in? && user != current_user %>
              <% if current_user.following?(user) %>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-outline-danger" %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-outline-primary" %>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to 'マイページへ', user_path(user), class: "user_#{user.id}" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>